generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user") // "user", "worker", "admin"
  location  String?
  phoneNumber String?
  createdAt DateTime @default(now())
  
  workerProfile WorkerProfile?
}

model WorkerProfile {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  user        User    @relation(fields: [userId], references: [id])
  category    String  // Electrician, Plumber, etc.
  location    String
  experience  String?
  bio         String?
  isVerified  Boolean @default(false)
  
  createdAt   DateTime @default(now())
}
